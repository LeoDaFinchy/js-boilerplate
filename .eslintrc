{
  "extends": ["standard"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "rules": {
    "standard/computed-property-even-spacing": 0,
    "quotes": [2, "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
    "no-console": 0,
    "arrow-parens": [2, "as-needed"],
    "comma-dangle": [2, "always-multiline"],
    "space-before-function-paren": [2, "always"]
  }
}
